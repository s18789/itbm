@{
    List<Cure> cures = (List<Cure>)ViewData["Cures"];
}

<partial name="_ModelsPartialView" />

<div style="clear: both">

</div>

<table>
    <tr>
        <th>
            Id:
        </th>
        <th>
            Name:
        </th>
    </tr>
    @foreach (Cure cure in cures)
    {
        <tr>
            <td>
                @cure.Id
            </td>
            <td>
                @cure.CureName
            </td>
            <td>
                <a href="@Url.Action("DeleteCure", "HomeAcess", new { cureId = cure.Id } )"> Delete </a>
            </td>
            <td>
                |
            </td>
            <td>
                <a href="@Url.Action("ShowUpdateCureForm", "HomeAcess", new { cureId = cure.Id} )"> Update </a>
            </td>
        </tr>
   }

</table>


